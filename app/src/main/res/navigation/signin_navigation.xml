<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signin_navigation"
    app:startDestination="@id/navigation_email">

    <fragment
        android:id="@+id/navigation_email"
        android:name="com.implude.niche.presentation.signin.EmailFragment"
        android:label="signin_email"
        tools:layout="@layout/fragment_email">
        <action
            android:id="@+id/action_navigation_email_to_navigation_login"
            app:destination="@id/navigation_login" />
    </fragment>

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.implude.niche.presentation.signin.LoginFragment"
        android:label="signin_login"
        tools:layout="@layout/fragment_login" />

</navigation>